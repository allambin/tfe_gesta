{% for section in checklist_model %}
    <h4>{{ section.t_nom }}</h4>
    {% for valeur in section.valeurs %}
        {% if current_checklist[valeur.id_checklist_valeur] is not null %}
            {{ form_checkbox('liste[]', valeur.id_checklist_valeur, {checked: 'checked'}) }} 
        {% else %}
            {{ form_checkbox('liste[]', valeur.id_checklist_valeur) }} 
        {% endif %}
        {{ valeur.t_nom }}<br />
    {% endfor %}
{% endfor %}