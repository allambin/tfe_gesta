{% extends 'layout.twig' %}

{% block list %}

<fieldset>
    
    <a href="ajouter_login" class="btn btn-success pull-right"><i class="icon-white icon-plus"></i> Ajouter</a>
    
    <table class="table table-striped table-top">
        <tr>
            <th>Nom</th>
            <th>Niveau</th>
            <th>Nom</th>
            <th>Pr&eacute;nom</th>
            <th>Fonction</th>
            <th class="actions"></th>
        {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ attribute(groupes, user.group).name }}</td>
            <td>{{ user.t_nom }}</td>
            <td>{{ user.t_prenom }}</td>
            <td>{{ user.t_acl }}</td>

            <td class="text-right">
                <a class="btn btn-mini btn-warning" href="{{ uri_create('administration/modifier_login/'~user.id) }}"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-mini btn-danger" href="{{ uri_create('administration/supprimer_login/'~user.id) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer ce login ?')"><i class="icon-remove-sign icon-white"></i></a>
            </td>
        </tr>    
        {% endfor %}
    </table>
    
</fieldset>

{% endblock list %}