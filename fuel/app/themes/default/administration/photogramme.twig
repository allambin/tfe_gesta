{% extends 'layout.twig' %}

{% block list %}

<fieldset>
    <legend>Liste des items</legend>
    
    <table class="table table-striped table-top">
        <tr>
            <th>Nom</th>
            <th>Valeur</th>
            <th class="actions"></th>
        </tr>
        {% for key,item in photogramme %}
        <tr>
            <td>{{ item }}</td>
            <td class="valeur">{{ key }}</td>
            <td class="text-right">
                <a title="Modifier" class="btn btn-mini btn-warning" href="{{ uri_create('administration/modifier_photogramme_xml/'~key) }}"><i class="icon-edit icon-white"></i></a>
            </td>
        </tr>
        {% endfor %}
    </table>
    
</fieldset>

{% endblock list %}