{% extends './layout.twig' %}

{% block form %}

<h1>Checklist</h1>

{{ form_open({class: 'form-horizontal'}) }}

{% for section in checklist_model %}
    <h2>{{ section.t_nom }}</h2>
    {% for valeur in section.valeurs %}
        {% if current_checklist[valeur.id_checklist_valeur] is not null %}
            {{ form_checkbox('liste[]', valeur.id_checklist_valeur, {checked: 'checked'}) }} 
        {% else %}
            {{ form_checkbox('liste[]', valeur.id_checklist_valeur) }} 
        {% endif %}
        {{ valeur.t_nom }}<br />
    {% endfor %}
{% endfor %}

<div class="form-actions">
    <button type="submit" class="btn btn-success">Confirmer</button>
</div>
{{ form_close }}

{% endblock form %}